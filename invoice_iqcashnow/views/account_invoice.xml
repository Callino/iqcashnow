<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_iqcn" model="ir.ui.view">
        <field name="name">invoice.iqcn</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='other_info']" position="inside">
                <group>
                    <field name="iqcn_payment"/>
                    <field name="payment_acquirer_id" attrs="{'invisible': [('iqcn_payment', '=', False)], 'required': [('iqcn_payment', '=', True)]}"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>